// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ★ usersコレクション: 読み取りは全員可能、書き込みは自分のみ
    match /users/{userId} {
      // 全ユーザーが全員のデータを読み取り可能（ランキング表示のため）
      allow read: if true;
      
      // 書き込みは自分のデータのみ
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ★ rankingsコレクションは廃止（削除または無効化）
    match /rankings/{document} {
      allow read, write: if false;
    }
    
    // その他のドキュメントは拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}